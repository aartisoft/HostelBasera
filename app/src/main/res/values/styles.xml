<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="titleTextAppearance">@style/TextAppearance.FontPath_Regular</item>
    </style>

    <style name="TextAppearance.FontPath_Light" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="TextAppearance.FontPath_Regular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="TextAppearance.FontPath_Bold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dim_text15</item>
        <item name="android:textStyle">normal</item>
    </style>



    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="LibAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="customTabLayout" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dim_text18</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

</resources>
