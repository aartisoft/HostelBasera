<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    tools:context=".seller.AddHostelPGActivity">

    <include layout="@layout/home_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_1dp"
                android:layout_marginRight="@dimen/dim_1dp"
                android:layout_marginTop="@dimen/dim_3dp"
                app:cardCornerRadius="@dimen/dim_5dp">

                <Spinner
                    android:id="@+id/sp_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_12dp"
                android:text="@string/seller"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_1dp"
                android:layout_marginRight="@dimen/dim_1dp"
                android:layout_marginTop="@dimen/dim_3dp"
                app:cardCornerRadius="@dimen/dim_5dp">

                <Spinner
                    android:id="@+id/sp_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_12dp"
                android:text="@string/name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_1dp"
                android:layout_marginTop="@dimen/dim_3dp"
                android:padding="@dimen/dim_2dp"
                app:cardCornerRadius="@dimen/dim_3dp">

                <EditText
                    android:id="@+id/edt_add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="@string/enter_name"
                    android:inputType="text"
                    android:padding="@dimen/dim_5dp"
                    android:textSize="@dimen/dim_text14" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>