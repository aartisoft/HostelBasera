    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_5dp"
        card_view:cardCornerRadius="@dimen/dim_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_170dp">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image17"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/img_place_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:text="Rs.1500"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_text14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_10dp"
                android:text="Hotel Dreamland Lonavala"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14" />

            <RatingBar
                android:id="@+id/simpleRatingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:rating="2.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:text="Lonavala"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>