<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dim_2dp"
        android:layout_marginLeft="@dimen/dim_14dp"
        android:layout_marginRight="@dimen/dim_14dp"
        card_view:cardCornerRadius="@dimen/dim_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_hostel"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="@dimen/dim_110dp"
                android:background="@drawable/image_rounded_corner"
                android:src="@drawable/nav_bg"/>

            <TextView
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_text14"
                android:layout_marginTop="@dimen/dim_5dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:textStyle="bold"
                android:text="Rs.1500"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14"
                android:layout_marginTop="@dimen/dim_10dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:text="Hotel Dreamland Lonavala"/>

            <RatingBar
                android:id="@+id/simpleRatingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:rating="2.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:text="Hotel Dreamland Lonavala"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>